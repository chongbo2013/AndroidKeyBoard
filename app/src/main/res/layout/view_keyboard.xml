<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tm_input_background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tm_message_dialog_bottom_view_line"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:padding="6dip"
        >
        <!--照片-->
        <ImageView
            android:id="@+id/btn_photo"
            android:layout_width="34dip"
            android:layout_height="34dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/tm_message_select_photo"
           />

            <!--输入框-->
        <com.moxiu.keyboard.EmoticonsEditText
            android:id="@+id/et_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tm_comment_edit_style"
            android:focusable="false"
            android:layout_gravity="center_vertical"
            android:focusableInTouchMode="false"
            android:lineSpacingExtra="4dp"
            android:maxLines="4"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:layout_marginLeft="38dip"
            android:layout_marginRight="72dip"
            android:textSize="16sp" />
        <!--发送-->
        <TextView
            android:id="@+id/btn_send"
            android:layout_width="68dip"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="center_vertical|right"
            android:background="@drawable/tm_club_publish_post_send_selector"
            android:text="发送"
            android:textColor="@color/tm_text_white_non_transparency_30"
            android:textSize="12sp" />
    </FrameLayout>

    <com.moxiu.keyboard.FuncLayout
        android:id="@+id/ly_kvml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone" />
</LinearLayout>